BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.4
            Button:
                text: 'Up'
                font_size: 30
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 30
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert Mph to Kph'
        font_size: 50
        on_press: app.handle_conversion()
    Label:
        id: output_number
        font_size: 45
        color: (1, 1, 0, 1)
