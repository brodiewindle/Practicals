BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 35
            on_text: app.handle_conversion(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.4
            Button:
                text: 'Up'
                font_size: 30
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                font_size: 30
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: 'Convert Mph to Kph'
#        font_size: 50
#        on_press: app.handle_conversion(input_number.text)
    Label:
        text: app.output_display
        font_size: 45
        color: (1, 1, 0, 1)
